<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- activity-main에 보여질 note list 개별 아이템 설계 -->
    <TextView
        android:id="@+id/tv_noteItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="noteContent"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_noteTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_noteTitle"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="noteTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_noteItem" />

    <TextView
        android:id="@+id/tv_timeStamp"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="TimeStamp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_noteTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>